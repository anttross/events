@model IEnumerable<Event.Models.Events>

@{
    ViewBag.Title = "רשימת אירועים";
}

<h2>לוח האירועים שלך</h2>

<p>
    @Html.ActionLink("הוסף אירוע", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>

<table class="table table-striped table-hover">
    <tr>
        @*<th style="text-align:center;">
            @Html.DisplayNameFor(model => model.ApplicationUserID)
        </th>*@
        <th style="text-align:center;">
            @Html.DisplayNameFor(model => model.Event)
        </th>
        <th style="text-align:center;">
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align:center;">
            @*<td>
                @Html.DisplayFor(modelItem => item.ApplicationUserID)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Event)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("פרטים", "Details", new { id = item.ID }, new { @class = "label label-info" }) |
                @Html.ActionLink("ערוך", "Edit", new { id = item.ID }, new { @class = "label label-warning" }) |
                @Html.ActionLink("בטל", "Delete", new { id = item.ID }, new { @class = "label label-danger" })
            </td>
        </tr>
    }

</table>
