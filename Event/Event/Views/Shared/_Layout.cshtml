<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Events</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <div class="navbar-header pull-right">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Events", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav pull-right">
                        @*<li>@Html.ActionLinkIcon("מי אנחנו", "About", "Home", "glyphicon glyphicon-info-sign")</li>*@
                        @*<li>@Html.ActionLinkIcon("הוסף אירוע", "Create", "Events", "glyphicon glyphicon-plus-sign")</li>*@
                        <li>@Html.ActionLinkIcon("אירועים שלי", "Index", "Events", "glyphicon glyphicon-list")</li>
                        <li>@Html.ActionLinkIcon("ראשי", "Index", "Home", "glyphicon glyphicon-home")</li>
                    </ul>
                    <span class="pull-left">
                        @Html.Partial("_LoginPartial")
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - Events &copy;</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
